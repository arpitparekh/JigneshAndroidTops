<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialog.MyDialogActivity">

    <Button
        android:id="@+id/btnAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="52dp"
        android:text="Alert Dialog"
        app:layout_constraintStart_toStartOf="@+id/btnAlertCustom"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAlertCustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Custom Alert Dialog"
        app:layout_constraintStart_toStartOf="@+id/btnProgress"
        app:layout_constraintTop_toBottomOf="@+id/btnAlert" />

    <Button
        android:id="@+id/btnProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20dp"
        android:text="Progress Dialog"
        app:layout_constraintEnd_toEndOf="@+id/btnProgress2"
        app:layout_constraintTop_toBottomOf="@+id/btnAlertCustom" />

    <Button
        android:id="@+id/btnProgress2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="68dp"
        android:text="Progress Dialog 2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnProgress" />

    <Button
        android:id="@+id/btnTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Time Picker"
        app:layout_constraintStart_toStartOf="@+id/btnProgress2"
        app:layout_constraintTop_toBottomOf="@+id/btnProgress2" />

    <Button
        android:id="@+id/btnDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Date Picker"
        app:layout_constraintEnd_toEndOf="@+id/btnTimePicker"
        app:layout_constraintTop_toBottomOf="@+id/btnTimePicker" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDatePicker" />
</androidx.constraintlayout.widget.ConstraintLayout>